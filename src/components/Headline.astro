---
interface Props {
  top?: string;
  bottom?: string;
}

const { top, bottom } = Astro.props;
---

{top != null && <h3 class="text-center font-serif text-2xl lg:text-3xl">{top}</h3>}
<h2 class="pt-2 pb-6 text-center font-serif text-4xl lg:pt-4 lg:pb-12 lg:text-5xl xl:text-6xl">
  <slot />
</h2>
{bottom != null && <h4 class="-mt-5 text-center font-serif text-xl lg:-mt-10 lg:text-2xl">{bottom}</h4>}
