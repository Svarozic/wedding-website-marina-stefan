---
interface Props {
  class?: unknown;
  "data-id"?: string;
}

const { class: className, "data-id": dataId } = Astro.props;
---

<p
  class="mx-auto w-full max-w-240 pt-2 pb-4 text-center leading-loose lg:pt-4 lg:pb-8 lg:text-lg lg:leading-loose"
  class:list={[className]}
  data-id={dataId}
>
  <slot />
</p>
