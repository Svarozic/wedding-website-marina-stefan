---
import { l, t } from "astro-i18n";
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
import ParticipationHeadline from "@components/ParticipationHeadline.astro";
import FlowerDivider from "@components/FlowerDivider.astro";
import Hero from "@components/Hero.astro";
import CountdownHeadline from "@components/CountdownHeadline.astro";
---

<Layout>
  <Hero />

  <style>
    .parallax-wedding-location {
      background: url(/parallax-wedding-location-800-800.jpeg) no-repeat fixed center center;
      background-size: cover;

      @media only screen and (min-width: 768px) {
        background: url(/parallax-wedding-location.jpeg) no-repeat fixed center center;
        background-size: cover;
      }
    }
  </style>
  <div class="parallax-wedding-location flex h-96 w-full flex-col items-center justify-center lg:h-140">
    <div class="card mx-2 bg-white/50 p-4 shadow-xl backdrop-blur lg:p-8">
      <CountdownHeadline withHeadline />
      <a class="btn btn-ghost" href={l("/program")}>{t("moreInfo")}</a>
    </div>
  </div>

  <FlowerDivider type="3" />

  <Container>
    <ParticipationHeadline />
  </Container>

  <FlowerDivider type="1" />
</Layout>
